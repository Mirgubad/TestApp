@using Web.ViewModels.Product;
@model ProductPhotoUpdateVM;

<div class="container ">
    <form method="post" enctype="multipart/form-data">
        <div class="row">
            <div class="col-4">
                <div class="form-control">
                    <label asp-for="Order"></label>
                    <input class="form-control" asp-for="Order" />
                    <span class="form-text text-danger "asp-validation-for="Order"></span>
                </div>
            </div>
        </div>
        <div class="mt-4">
            <button class="btn btn-outline-success" asp-action="UpdateProductPhoto" asp-controller="product" >Update</button>
            <a class="btn btn-outline-danger" asp-action="update" asp-controller="product" asp-route-id="@Model.ProductId" >Cancel</a>
        </div>
    </form>
</div>
